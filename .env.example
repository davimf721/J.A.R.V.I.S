# ================================================================================
# JARVIS - Sistema de Podcast Inteligente
# Configuração de Variáveis de Ambiente
# ================================================================================

# ==================== OLLAMA / LLM ====================
OLLAMA_URL=http://ollama:11435/api/generate
OLLAMA_MODEL=kimi-k2.5:cloud
LLM_TIMEOUT=300

# ==================== POSTGRESQL ====================
POSTGRES_USER=jarvis
POSTGRES_PASSWORD=jarvis_secure_password
POSTGRES_DB=jarvis_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ==================== REDIS ====================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ==================== RABBITMQ ====================
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=jarvis
RABBITMQ_PASSWORD=jarvis_queue_pwd
RABBITMQ_VHOST=jarvis

# ==================== STORAGE (S3/MINIO) ====================
S3_ENDPOINT=http://minio:9000
S3_BUCKET=jarvis-media
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_REGION=us-east-1

# ==================== CHROMADB ====================
CHROMADB_HOST=chromadb
CHROMADB_PORT=8000
CHROMADB_PERSIST_DIR=/chroma/data

# ==================== SEGURANÇA ====================
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==================== AUTENTICAÇÃO ====================
ENABLE_AUTH=true
ENABLE_RATE_LIMITING=true
ENABLE_TELEMETRY=false

# ==================== API ====================
API_TITLE=JARVIS AI Platform
API_VERSION=1.0.0

# ==================== LOGGING ====================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ==================== GRAFANA ====================
GRAFANA_PASSWORD=admin

# ==================== RESILÊNCIA ====================
MAX_RETRIES=3
RETRY_DELAY_SECONDS=2
HTTP_TIMEOUT_SECONDS=30

# ==================== PODCAST DEFAULTS ====================
DEFAULT_PODCAST_DURATION_MINUTES=8
DEFAULT_NEWS_COUNT=8
DEFAULT_LANGUAGE=pt-BR

# ==================== TEXT-TO-SPEECH ====================
DEFAULT_TTS_VOICE=pt-BR-FranciscaNeural
DEFAULT_TTS_SPEED=1.0
DEFAULT_TTS_PITCH=0.0
DEFAULT_AUDIO_BITRATE=128000
DEFAULT_AUDIO_FORMAT=mp3

# ==================== NEWS SERVICE ====================
MAX_NEWS_COUNT=50
NEWS_CACHE_DURATION=1800
NEWS_FETCH_TIMEOUT=30

# ==================== SCRIPT GENERATION ====================
SCRIPT_GENERATION_MODE=normal
SCRIPT_GENERATION_MAX_RETRIES=3
SCRIPT_GENERATION_TEMPERATURE=0.7

# ==================== MONITORAMENTO ====================
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090
PROMETHEUS_SCRAPE_INTERVAL=15

# ==================== DESENVOLVIMENTO ====================
DEBUG_MODE=false
ALLOW_ALL_ORIGINS=false
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ==================== CLEANUP ====================
CLEANUP_COMPLETED_JOBS_AFTER_DAYS=7
CLEANUP_FAILED_JOBS_AFTER_DAYS=3
CLEANUP_SCHEDULE=03:00
